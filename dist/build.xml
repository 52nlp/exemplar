<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project relibrary with Jar-in-Jar Loader">
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
    <target name="create_run_jar">
        <jar destfile="./exemplar.jar">
            <manifest>
                <attribute name="Main-Class" value="org.eclipse.jdt.internal.jarinjarloader.JarRsrcLoader"/>
                <attribute name="Rsrc-Main-Class" value="ca.ualberta.complexre.core.Exemplar"/>
                <attribute name="Class-Path" value="."/>
                <attribute name="Rsrc-Class-Path" value="./ liblinear-1.8.jar libsvm.jar log4j.jar maltparser-1.7.2.jar stanford-corenlp-2012-07-09.jar stanford-tregex-2.0.5.jar stanford-corenlp-2012-07-06-models.jar xom.jar joda-time.jar"/>
            </manifest>
            <zipfileset src="jar-in-jar-loader.zip"/>
            <fileset dir="../bin"/>
            <fileset dir="../../ReLibraryCommon/bin"/>
	    <fileset dir="../../ReLibraryIO/bin"/>
            <zipfileset dir="../../dependencies/lib" includes="liblinear-1.8.jar"/>
            <zipfileset dir="../../dependencies/lib" includes="libsvm.jar"/>
            <zipfileset dir="../../dependencies/lib" includes="log4j.jar"/>
            <zipfileset dir="../../dependencies/lib" includes="maltparser-1.7.2.jar"/>
            <zipfileset dir="../../dependencies/lib" includes="stanford-corenlp-2012-07-09.jar"/>
            <zipfileset dir="../../dependencies/lib" includes="stanford-tregex-2.0.5.jar"/>
            <zipfileset dir="../../dependencies/lib" includes="stanford-corenlp-2012-07-06-models.jar"/>
            <zipfileset dir="../../dependencies/lib" includes="joda-time.jar"/>
            <zipfileset dir="../../dependencies/lib" includes="xom.jar"/>
        </jar>
    </target>
</project>
